{
  "name": "@tsukina-7mochi/esbuild-plugin-sass",
  "version": "0.1.1",
  "exports": "./mod.ts",
  "tasks": {
    "build:example-deno": "cd example/deno && deno run --allow-read --allow-write --allow-run --allow-env build.ts",
    "clean:example": "rm example/**/*.css"
  },
  "license": "MIT",
  "imports": {
    "@std/path": "jsr:@std/path@^1.0.6",
    "esbuild": "npm:esbuild@^0.24.0",
    "sass": "npm:sass@^1.80.3"
  },
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 80,
    "proseWrap": "always",
    "singleQuote": true,
    "useTabs": false
  }
}
